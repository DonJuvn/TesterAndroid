<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/surak1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="surak1"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_gravity="center"/>
    <RadioGroup
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <RadioButton
        android:id="@+id/surak1_jauap1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
            android:gravity="center"
        android:text="jauap1" />

        <RadioButton
            android:id="@+id/surak1_jauap2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
            android:gravity="center"
        android:text="jauap2" />

            <RadioButton
        android:id="@+id/surak1_jauap3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
            android:gravity="center"
        android:text="jauap3" />

        <RadioButton
            android:id="@+id/surak1_jauap4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
            android:gravity="center"
        android:text="jauap4" />

    </RadioGroup>

    <TextView
        android:id="@+id/surak2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="surak2"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_gravity="center"
        />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">




            <RadioButton
                android:id="@+id/surak2_jauap1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="jauap1" />

            <RadioButton
                android:id="@+id/surak2_jauap2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="jauap2" />
<RadioButton
                android:id="@+id/surak2_jauap3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="jauap3" />

            <RadioButton
                android:id="@+id/surak2_jauap4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="jauap4" />


    </RadioGroup>

    <TextView
        android:id="@+id/surak3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="surak3"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_gravity="center" />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">




            <RadioButton
                android:id="@+id/surak3_jauap1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="jauap1" />

            <RadioButton
                android:id="@+id/surak3_jauap2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="jauap2" />
 <RadioButton
                android:id="@+id/surak3_jauap3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="jauap3" />

            <RadioButton
                android:id="@+id/surak3_jauap4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="jauap4" />


    </RadioGroup>

    <TextView
        android:id="@+id/surak4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="surak4"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_gravity="center" />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">




            <RadioButton
                android:id="@+id/surak4_jauap1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="jauap1" />

            <RadioButton
                android:id="@+id/surak4_jauap2"
                android:layout_width="match_parent"
